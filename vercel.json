{
  "version": 2,
  "functions": {
    "api/*.py": {
      "runtime": "python3.11",
      "maxDuration": 10
    }
  },
  "routes": [
    { "src": "^/api/(.*)$", "dest": "api/app.py" },

    // Sirve archivos est√°ticos tal cual
    { "src": "^/(index\\.html|style\\.css|script\\.js|icons/.*)$", "dest": "/$1" },

    // Cualquier otra ruta (no /api) manda al index.html
    { "src": "^(?!/api/).*$", "dest": "/index.html" }
  ]
}

